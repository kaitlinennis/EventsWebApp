<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Ennis Arts & Crafts</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
    <header>
        <div class="headerContainer">

            <div id="logoImage">
                <a href="/">
                    <img src="/images/logo.png" alt="Ennis Arts & Crafts logo" width="130px" height="70px">
                </a>
            </div>

            <!--user-specific navigation (log-in, signup, Start a new connection, etc.)-->
            <div id="userNav">
                <nav>
                    <ul>
                        <%if(!user) {%>
                            <li><a href="/users/login">Login</a></li>
                            <li><a href="/users/new">Sign up</a></li>
                        <%} else {%>
                            <li><a href="/connections/newConnection">Start a new connection</a></li>
                            <li><a href="/users/profile">Profile</a></li>
                            <li><a href="/users/logout">Logout</a></li>
                        <%}%>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!--general site navigation (home, connections, about, etc.)-->
    <nav class="generalNav">
        <li><a href="/">Home</a></li>
        <li><a href="/connections">Connections</a></li>
            <p id=userName>Welcome, <%= name%>!</p>
    </nav>

    <% if(errorMessages.length > 0) {%>
        <% errorMessages.forEach(message=>{%>
            <div class='error'>
                <%=message%>
            </div>
            <%});%>
                <%}%>
    
                    <% if(successMessages.length > 0) {%>
    
                        <% successMessages.forEach(message=>{%>
                            <div class='success'>
                                <%=message%>
                            </div>
                            <%});%>
                                <%}%>